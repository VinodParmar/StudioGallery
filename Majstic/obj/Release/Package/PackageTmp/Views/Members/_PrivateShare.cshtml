@model Majstic.Models.VM.PriavteShare


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Priavte Share</h4>
        <hr />
        <p>1- Select the expiry for accessing thies picture</p>
        <p>2- The System will generate a private link to your picture in wchis you can share it.</p>
        <p class="text-danger"> <strong> people with the link will be able to view the picture before the sharing expiry date </strong></p>
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p class="control-label col-md-4"><strong>Sharing Expiry Date:</strong></p>
            @*@Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })*@
            <div class="col-md-8">
                @Html.EditorFor(model => model.EndDate)

                @Html.ValidationMessageFor(model => model.EndDate)
                <p class="text-danger">Date: <strong> MM/DD/YYYY</strong></p>

            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Generate Link" class="btn btn-default" />
            </div>
        </div>
    </div>
}

