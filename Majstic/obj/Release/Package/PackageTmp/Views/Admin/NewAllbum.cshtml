@model Majstic.Models.album

@{
    ViewBag.Title = "NewAllbum";
}

<h3> Add New Allbum Under @Model.username account</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true)

        <strong>Please use formate dd-mm-yyyy</strong> <hr />
        <div class="form-group">
            <p class="control-label col-md-2">Album Name:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumName)
                @Html.ValidationMessageFor(model => model.AlbumName)
            </div>
        </div>



        <div class="form-group">
            @*@Html.LabelFor(model => model.username, new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.username)
                @Html.ValidationMessageFor(model => model.username)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
