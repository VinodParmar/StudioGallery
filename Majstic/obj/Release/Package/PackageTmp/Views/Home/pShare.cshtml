@model Majstic.Models.VM.TimeLinePic

@{
    ViewBag.Title = "Check out my picture with ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>



<ul class="list-inline col-centered marginleft15px">
    <li>
        <p class="col-centered"><img src="~/thumb/@Model.PicThumb" class="img-thumbnail" width="50" /></p>
    </li>
    <li>
        <p class="col-centered"><strong>@Html.ActionLink(@Model.UserName, "USerLine", "Home", new { UN = Model.UserName }, null)</strong></p>
    </li>
</ul>
<div class="marginTop10px grd"></div>

<img src="/Show/ShowPhoto/@Model.Id" alt="" class="img-responsive col-centered thumbnail" oncontextmenu="return false" /> <br />
