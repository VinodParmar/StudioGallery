@model IEnumerable<Majstic.Models.VM.TimeLinePic>

@{
    ViewBag.Title = " Majestic  Public TimeLine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<div style="box-shadow: 0px 14px 32px -20px rgba(61,26,0,1);  background-color:white ; margin-top:5px;">
    <h1 class="headline3  marginleft15px">Majstic TimeLine </h1>
    <blockquote class="marginleft15px">
        <p style="text-align:justify">
            Showing the leatest pictures that has been shared by our users 
        </p>
        <footer>Comment and share with them their happiest moments ..</footer>
       

    </blockquote>
    <div class="marginTop10px grd"></div>
</div>

<div class="row marginTop10px">

    @foreach (var item in Model)
{ 
   
       
        <div class="marginTop10px card">
            <p class=""><img src="~/thumb/@item.PicThumb" class="img-thumbnail" width="50" /></p>
            <p class=""><strong>@Html.ActionLink(@item.UserName, "USerLine", "Home", new { UN = item.UserName }, null)</strong></p>
            <img src="/Show/ShowPhoto/@item.Id" alt="" class="img-responsive col-centered thumbnail" oncontextmenu="return false" /> <br />
            <div class="col-centered">
                <div class="fb-comments " data-href="http://majesticphotostudio.com/Home/Pic/@item.Id" data-width="550" data-numposts="5" data-colorscheme="light"></div>
            </div>
            <div class="marginTop10px grd"></div>

        </div>

   

}
</div>
