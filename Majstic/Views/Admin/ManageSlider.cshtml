
@{
    ViewBag.Title = "ManageSlider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Slider Imges</h2>

<div class="row">
    <div class="col-md-9">
        <h3>Slider - Img1</h3>
        <img src="~/Content/MJB/1.png" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <h3>Upload new  - Img1</h3>

        @using (Html.BeginForm("UploadSlider", "Admin", new {x = 1}, FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            <div class="btn btn-default image-preview-input">
                <span class="glyphicon glyphicon-folder-open"></span>
                <span class="image-preview-input-title">Browse</span>
                <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview" /> <!-- rename it -->
            </div>
            <input type="submit" value="Upload" class="btn btn-default col-centered" />
        }
    </div>
</div>
<hr />

