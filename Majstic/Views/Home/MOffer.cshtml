@model IEnumerable<Majstic.Models.offer>

@{
    ViewBag.Title = "Majestic Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2 class="headline3 ">M</h2>*@
<div style="box-shadow: 0px 14px 32px -20px rgba(61,26,0,1);  background-color:white ; margin-top:5px;">
    <h1 class="headline3  marginleft15px">Majestic Offers </h1>
    <blockquote class="marginleft15px">
        <p style="text-align:justify">
            We offers a wide range of packages and offers for all of your happy moments 
        </p>
        <footer>what is your next big moment ? we are ready to capture the memories...</footer>

    </blockquote>
    <div class="marginTop10px grd"></div>

</div>


<div class="row marginTop10px marginleft15px ">

    @foreach (var item in Model)
    {
        <div class="col-md-6 marginTop5px  ">
            <div class="well col-centered  marginleft15px MR15" style="box-shadow: 5px 0px 6px -4px rgba(0,0,0,0.27); ">
                <h3 style="text-transform:uppercase ; color:#bf843b"><b>@item.Title</b></h3>
                <hr>
                <p><img src="~/thumb/offers/@item.thumb" class="img-responsive" oncontextmenu="return false" style="pointer-events:none" /></p>
                <hr>
                <p> <strong> @item.NoShots </strong> Pictures * <strong>@item.NoCopy</strong> Copies </p>
                <hr>
                @*<p><b>@item.Price SDG - or - @item.points Points</b></p>*@
                <hr />
                <p><b>@item.Dis</b></p>
                <hr>
                @*<a href="#" class="btn btn-warning  btn-block" >Order</a>*@
            </div>
            <div class="grd"></div>
        </div>


    }
</div>
<div class="grd marginTop10px"></div>
<hr />